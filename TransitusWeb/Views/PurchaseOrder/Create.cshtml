@model TransitusWeb.Models.PurchaseOrderViewModel

@{
    ViewData["Title"] = "Create Purchase Order";
}

<div class="container mt-4">
    <h1>Create Purchase Order</h1>
    <h4>For Vendor: @ViewBag.VendorName</h4>
    <hr />

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Purchase Order Details</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="VendorId" value="@ViewBag.VendorId" />

                        <div class="mb-3 row">
                            <label asp-for="PONumber" class="col-sm-3 col-form-label"></label>
                            <div class="col-sm-9">
                                <input asp-for="PONumber" class="form-control" />
                                <span asp-validation-for="PONumber" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3 row">
                            <label asp-for="OrderDate" class="col-sm-3 col-form-label"></label>
                            <div class="col-sm-9">
                                <input asp-for="OrderDate" class="form-control" type="date" />
                                <span asp-validation-for="OrderDate" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3 row">
                            <label asp-for="ExpectedDeliveryDate" class="col-sm-3 col-form-label"></label>
                            <div class="col-sm-9">
                                <input asp-for="ExpectedDeliveryDate" class="form-control" type="date" />
                                <span asp-validation-for="ExpectedDeliveryDate" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3 row">
                            <label asp-for="Status" class="col-sm-3 col-form-label"></label>
                            <div class="col-sm-9">
                                <select asp-for="Status" class="form-select">
                                    <option value="Draft">Draft</option>
                                    <option value="Pending">Pending</option>
                                    <option value="Approved">Approved</option>
                                    <option value="Rejected">Rejected</option>
                                    <option value="Completed">Completed</option>
                                    <option value="Cancelled">Cancelled</option>
                                </select>
                                <span asp-validation-for="Status" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3 row">
                            <label asp-for="TotalAmount" class="col-sm-3 col-form-label"></label>
                            <div class="col-sm-9">
                                <input asp-for="TotalAmount" class="form-control" type="number" step="0.01" />
                                <span asp-validation-for="TotalAmount" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3 row">
                            <label asp-for="Notes" class="col-sm-3 col-form-label"></label>
                            <div class="col-sm-9">
                                <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
                                <span asp-validation-for="Notes" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3 row">
                            <div class="offset-sm-3 col-sm-9">
                                <button type="submit" class="btn btn-primary">Create</button>
                                <a asp-action="Index" asp-route-vendorId="@ViewBag.VendorId" class="btn btn-secondary">Cancel</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">Help</h5>
                </div>
                <div class="card-body">
                    <p>Fill in the details to create a new purchase order for @ViewBag.VendorName.</p>
                    <ul>
                        <li><strong>PO Number</strong>: A unique identifier for this purchase order.</li>
                        <li><strong>Order Date</strong>: The date the purchase order was created.</li>
                        <li><strong>Expected Delivery</strong>: When you expect to receive the items.</li>
                        <li><strong>Status</strong>: The current status of the purchase order.</li>
                        <li><strong>Total Amount</strong>: The total cost of all items in this purchase order.</li>
                        <li><strong>Notes</strong>: Any additional information about this purchase order.</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 
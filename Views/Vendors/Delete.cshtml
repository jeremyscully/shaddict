@model TransitusWeb.Models.Vendor

@{
    ViewData["Title"] = "Delete Vendor";
}

<div class="container py-4">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Dashboard</a></li>
            <li class="breadcrumb-item"><a asp-action="Index">Vendors</a></li>
            <li class="breadcrumb-item active" aria-current="page">Delete</li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-md-8">
            <div class="card shadow-sm border-danger">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0"><i class="bi bi-exclamation-triangle me-2"></i>Delete Vendor</h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        Are you sure you want to delete this vendor? This action cannot be undone.
                    </div>
                    
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">@Html.DisplayNameFor(model => model.Name)</div>
                        <div class="col-md-8">@Html.DisplayFor(model => model.Name)</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">@Html.DisplayNameFor(model => model.ContactName)</div>
                        <div class="col-md-8">@Html.DisplayFor(model => model.ContactName)</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">@Html.DisplayNameFor(model => model.Email)</div>
                        <div class="col-md-8">@Html.DisplayFor(model => model.Email)</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">@Html.DisplayNameFor(model => model.Category)</div>
                        <div class="col-md-8">@Html.DisplayFor(model => model.Category)</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">@Html.DisplayNameFor(model => model.Status)</div>
                        <div class="col-md-8">
                            @{
                                var badgeClass = Model.Status switch
                                {
                                    TransitusWeb.Models.VendorStatus.Active => "bg-success",
                                    TransitusWeb.Models.VendorStatus.Inactive => "bg-secondary",
                                    TransitusWeb.Models.VendorStatus.Pending => "bg-warning",
                                    TransitusWeb.Models.VendorStatus.Blacklisted => "bg-danger",
                                    _ => "bg-secondary"
                                };
                            }
                            <span class="badge @badgeClass">@Model.Status</span>
                        </div>
                    </div>
                    
                    <form asp-action="Delete" class="mt-4">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left me-2"></i>Back to List
                            </a>
                            <div>
                                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info me-2">
                                    <i class="bi bi-info-circle me-2"></i>Details
                                </a>
                                <button type="submit" class="btn btn-danger">
                                    <i class="bi bi-trash me-2"></i>Delete
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="bi bi-info-circle me-2"></i>Help</h5>
                </div>
                <div class="card-body">
                    <h6>Deleting a Vendor</h6>
                    <p>Deleting a vendor will permanently remove all their information from the system.</p>
                    
                    <div class="alert alert-info">
                        <i class="bi bi-lightbulb me-2"></i>
                        <small>Consider setting the vendor status to "Inactive" instead of deleting if you might work with them again in the future.</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 
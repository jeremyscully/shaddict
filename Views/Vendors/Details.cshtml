@model TransitusWeb.Models.Vendor

@{
    ViewData["Title"] = "Vendor Details";
}

<div class="container py-4">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Dashboard</a></li>
            <li class="breadcrumb-item"><a asp-action="Index">Vendors</a></li>
            <li class="breadcrumb-item active" aria-current="page">Details</li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-md-8">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-info-circle me-2"></i>Vendor Information</h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">@Html.DisplayNameFor(model => model.Name)</div>
                        <div class="col-md-8">@Html.DisplayFor(model => model.Name)</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">@Html.DisplayNameFor(model => model.ContactName)</div>
                        <div class="col-md-8">@Html.DisplayFor(model => model.ContactName)</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">@Html.DisplayNameFor(model => model.Email)</div>
                        <div class="col-md-8">
                            <a href="mailto:@Model.Email">@Html.DisplayFor(model => model.Email)</a>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">@Html.DisplayNameFor(model => model.Phone)</div>
                        <div class="col-md-8">
                            <a href="tel:@Model.Phone">@Html.DisplayFor(model => model.Phone)</a>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">@Html.DisplayNameFor(model => model.Category)</div>
                        <div class="col-md-8">@Html.DisplayFor(model => model.Category)</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">@Html.DisplayNameFor(model => model.Status)</div>
                        <div class="col-md-8">
                            @{
                                var badgeClass = Model.Status switch
                                {
                                    TransitusWeb.Models.VendorStatus.Active => "bg-success",
                                    TransitusWeb.Models.VendorStatus.Inactive => "bg-secondary",
                                    TransitusWeb.Models.VendorStatus.Pending => "bg-warning",
                                    TransitusWeb.Models.VendorStatus.Blacklisted => "bg-danger",
                                    _ => "bg-secondary"
                                };
                            }
                            <span class="badge @badgeClass">@Model.Status</span>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">@Html.DisplayNameFor(model => model.DateAdded)</div>
                        <div class="col-md-8">@Html.DisplayFor(model => model.DateAdded)</div>
                    </div>
                    @if (!string.IsNullOrEmpty(Model.Notes))
                    {
                        <div class="row">
                            <div class="col-md-4 fw-bold">@Html.DisplayNameFor(model => model.Notes)</div>
                            <div class="col-md-8">@Html.DisplayFor(model => model.Notes)</div>
                        </div>
                    }
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="bi bi-gear me-2"></i>Actions</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                            <i class="bi bi-pencil me-2"></i>Edit
                        </a>
                        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                            <i class="bi bi-trash me-2"></i>Delete
                        </a>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left me-2"></i>Back to List
                        </a>
                    </div>
                </div>
            </div>
            
            <!-- Placeholder for future related data -->
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="bi bi-clock-history me-2"></i>Recent Activity</h5>
                </div>
                <div class="card-body">
                    <p class="text-muted text-center my-3">No recent activity to display.</p>
                </div>
            </div>
        </div>
    </div>
</div> 